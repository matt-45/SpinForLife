@model int

@for (int i = 0; i < Model; i++)
{
    var input1 = "startHour" + i;
    var input2 = "endHour" + i;
    var label = "Interval " + (i + 1);
    <div class="row">
        <div class="col">
            <h6 class="control-label" style="font-weight: bold">@label</h6>
        </div>
    </div>
    <div class="row" style="padding-bottom: 1%">
        <div class="col-3">
            <h7 class="control-label">Start Hour</h7>
            <input id=@input1 class="timePicker text-center form-control"/>
        </div>
        <div class="col-3">
            <h7 class="control-label">End Hour</h7>
            <input id=@input2 class="timePicker text-center form-control" />
        </div>
    </div>
}

